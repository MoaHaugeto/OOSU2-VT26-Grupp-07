<Window x:Class="OOSU2_VT26_Grupp_07.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOSU2_VT26_Grupp_07"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="35" Text="Personal inlogg" 
                   FontFamily="Rage Italic" Grid.ColumnSpan="3" Margin="10"/>

        <TextBlock Grid.Column="1" Grid.Row="2" Text="Användarnamn: " Margin="5"/>
        <TextBox x:Name="användarnamnTexbox" Grid.Column="2" Grid.Row="2"
                 Width="200"  Margin="5"/>

        <TextBlock Grid.Column="1" Grid.Row="3" Text="Lösenord: " Margin="5"/>
        <TextBox x:Name="lösenordTextbox" Grid.Column="2" Grid.Row="3"
         Width="200" Margin="5"/>

        <Button x:Name="loggaInButton" Content="Logga in" Grid.Column="2" Grid.Row="4"  
                Margin="5" Click="loggaInButton_Click"/>

        <Image Grid.Row="1" Grid.Column="4" Grid.RowSpan="6" 
               Source="F:\Downloads\streckgubbe.png"/>
    </Grid>
</Window>
