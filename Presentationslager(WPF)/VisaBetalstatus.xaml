<Window x:Class="OOSU2_VT26_Grupp_07.Presentationslager_WPF_.VisaBetalstatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOSU2_VT26_Grupp_07.Presentationslager_WPF_"
        mc:Ignorable="d" FontSize="16" FontFamily="Lucida Bright"
        Title="VisaBetalstatus" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Medlemmars Betalstatus" FontSize="28" Margin="0,0,0,20" Grid.Row="0"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Välj Medlem: " VerticalAlignment="Center"/>
            <ComboBox x:Name="medlemComboBox" Width="250" DisplayMemberPath="Namn" 
                      SelectionChanged="medlemComboBox_SelectionChanged" Margin="10,0,0,0"/>
        </StackPanel>

        <DataGrid x:Name="betalningarDataGrid" Grid.Row="2" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single" Margin="0,0,0,20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fakturadatum" Binding="{Binding Köpdatum, StringFormat={}{0:yyyy-MM-dd}}" Width="*"/>
                <DataGridTextColumn Header="Förfallodatum" Binding="{Binding Forfallodatum, StringFormat={}{0:yyyy-MM-dd}}" Width="*"/>
                <DataGridTextColumn Header="Belopp" Binding="{Binding Belopp, StringFormat={}{0:C}}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Betaldatum" Binding="{Binding BataldDatum, StringFormat={}{0:yyyy-MM-dd}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <UniformGrid Grid.Row="3" Columns="2">
            <Button x:Name="registreraBetalningButton" Content="Markera som Betald" 
                    Background="#FF89CE7F" Height="40" Margin="0,0,5,0" Click="registreraBetalningButton_Click"/>
            <Button x:Name="tillbakaButton" Content="Tillbaka" Height="40" 
                    Margin="5,0,0,0" Click="tillbakaButton_Click"/>
        </UniformGrid>
    </Grid>
</Window>
