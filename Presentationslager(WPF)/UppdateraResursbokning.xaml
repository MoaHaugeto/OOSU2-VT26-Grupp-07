<Window x:Class="OOSU2_VT26_Grupp_07.Presentationslager_WPF_.UppdateraResursbokning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOSU2_VT26_Grupp_07.Presentationslager_WPF_"
        mc:Ignorable="d" FontSize="16" FontFamily="Lucida Bright"
        Title="UppdateraResursbokning" Height="600" Width="800" SizeToContent="Height">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Uppdatera Bokning" FontSize="28" Margin="0,0,0,20" Grid.Row="0"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Välj bokning (ID - Datum):" Margin="0,0,0,5"/>
            <ComboBox x:Name="bokningComboBox" SelectionChanged="bokningComboBox_SelectionChanged" Margin="0,0,0,20">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding BokningID, StringFormat='ID: {0}'}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="ResursID:"/>
            <TextBox x:Name="resursIdTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="MedlemsID:"/>
            <TextBox x:Name="medlemIdTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Datum:"/>
            <DatePicker x:Name="datumPicker" Margin="0,5,0,10"/>

            <TextBlock Text="Starttid (HH:mm):"/>
            <TextBox x:Name="starttidTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Sluttid (HH:mm):"/>
            <TextBox x:Name="sluttidTextBox" Margin="0,5,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <UniformGrid Columns="2">
                <Button x:Name="sparaButton" Content="Spara" Background="#FF89CE7F" Height="35" Margin="0,0,5,5" Click="sparaButton_Click"/>
                <Button x:Name="taBortButton" Content="Ta bort" Background="#FFFF7F7F" Height="35" Margin="5,0,0,5" Click="taBortButton_Click"/>
            </UniformGrid>
            <Button x:Name="avbrytButton" Content="Avbryt" Height="35" Click="avbrytButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
