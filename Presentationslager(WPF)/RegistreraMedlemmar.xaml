<Window x:Class="OOSU2_VT26_Grupp_07.Presentationslager_WPF_.RegistreraMedlemmar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOSU2_VT26_Grupp_07.Presentationslager_WPF_"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright"
        Title="RegistreraMedlemmar" Height="550" Width="800">
    <Grid Margin="20"> 
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Registrera Ny Medlem" FontSize="30" Margin="0,0,0,20" Grid.Row="0"/>

        <StackPanel Grid.Row="1" Margin="0,5">
            <TextBlock Text="Namn/Företagsnamn:"/>
            <TextBox x:Name="namnTextBox" Margin="0,5"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,5">
            <TextBlock Text="Email:"/>
            <TextBox x:Name="emailTextBox" Margin="0,5"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,5">
            <TextBlock Text="Telefonnummer:"/>
            <TextBox x:Name="telefonnummerTextBox" Margin="0,5"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,5">
            <TextBlock Text="Medlemskapsnivå:"/>
            <ComboBox x:Name="medlemskapsnivåComboBox" Margin="0,5"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Margin="0,5">
            <TextBlock Text="Betalningsstatus:"/>
            <ComboBox x:Name="betalningsStatusComboBox" Margin="0,5"/>
        </StackPanel>

        <UniformGrid Grid.Row="6" Columns="2" Margin="0,20,0,0">
            <Button x:Name="registreraMedlemButton" Content="Registrera" Margin="0,0,5,0" 
                    Background="#FF89CE7F" Height="40" Click="registreraMedlemButton_Click"/>
            <Button x:Name="avbrytButton" Content="Avbryt" Margin="5,0,0,0" 
                    Height="40" Click="avbrytRegistreringButton_Click"/>
        </UniformGrid>




    </Grid>
</Window>
