<Window x:Class="OOSU2_VT26_Grupp_07.Presentationslager_WPF_.UppdateraTillgänglighet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOSU2_VT26_Grupp_07.Presentationslager_WPF_"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright"
        Title="UppdateraTillgänglighet" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Hantera Resurs" FontSize="30" Margin="0,0,0,20" Grid.Row="0"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Välj Resurs:"/>
            <ComboBox x:Name="resursComboBox" DisplayMemberPath="Namn" Margin="0,5,0,20" 
                      SelectionChanged="resursComboBox_SelectionChanged"/>

            <TextBlock Text="Nuvarande status:"/>
            <TextBlock x:Name="nuvarandeStatusText" FontWeight="Bold" Margin="0,5,0,20" Text="-"/>

            <TextBlock Text="Ny status:"/>
            <ComboBox x:Name="nyStatusComboBox" Margin="0,5,0,10"/>
        </StackPanel>

        <UniformGrid Grid.Row="2" Columns="2" Margin="0,20,0,0">
            <Button x:Name="sparaButton" Content="Spara" Background="#FF89CE7F" Height="40" 
                    Margin="0,0,5,0" Click="sparaButton_Click"/>
            <Button x:Name="avbrytButton" Content="Avbryt" Height="40" 
                    Margin="5,0,0,0" Click="avbrytButton_Click"/>
        </UniformGrid>
    </Grid>
</Window>
