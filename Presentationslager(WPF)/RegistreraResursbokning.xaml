<Window x:Class="OOSU2_VT26_Grupp_07.Presentationslager_WPF_.RegistreraResursbokning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOSU2_VT26_Grupp_07.Presentationslager_WPF_"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright"
        Title="RegistreraResursbokning" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" Text="Registrera Resursbokning" FontSize="35"
           Grid.ColumnSpan="3" Margin="10"/>
        
        <TextBlock Grid.Column="1" Grid.Row="2" Text="ResursID:" Margin="5" />
        <TextBox x:Name="ResursIDTextBox" Grid.Column="2" Grid.Row="2" Width="200" Margin="5" />

        <TextBlock Grid.Column="1" Grid.Row="3" Text="MedlemsID:" Margin="5" />
        <TextBox x:Name="MedlemsIDTextBox" Grid.Column="2" Grid.Row="3" Width="200" Margin="5"/>

        <TextBlock Grid.Column="1" Grid.Row="4" Text="Bokningsdatum" Margin="5"/>
        <TextBox x:Name="BokningsdatumTextBox" Grid.Column="2" Grid.Row="4" Width="200" Margin="5"/>

        <TextBlock Grid.Column="1" Grid.Row="5" Text="Starttid" Margin="5"/>
        <TextBox x:Name="StarttidTextBox" Grid.Column="2" Grid.Row="5" Width="200" Margin="5"/>

        <TextBlock Grid.Column="1" Grid.Row="6" Text="Sluttid" Margin="5"/>
        <TextBox x:Name="SluttidTextBox" Grid.Column="2" Grid.Row="6" Width="200" Margin="5"/>
        
    </Grid>
</Window>
