<Window x:Class="OOSU2_VT26_Grupp_07.Presentationslager_WPF_.PersonalMeny"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOSU2_VT26_Grupp_07.Presentationslager_WPF_"
        mc:Ignorable="d" FontSize="18" FontFamily="Lucida Bright"
        Title="PersonalMeny" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="35" Text="Personal Meny" 
                   Grid.ColumnSpan="3" Margin="10"/>
        <TextBlock Grid.Column="1" Grid.Row="2"  Text="Medlemmar" Margin="5" TextDecorations="Underline"/>

        <Button x:Name="hanteraMedlemmarButton"  Content="Hantera Medlemmar"
                Grid.Column="1" Grid.Row="3" Margin="5" Click="hanteraMedlemmarButton_Click"/>

        <TextBlock Grid.Column="2" Grid.Row="2" Text="Resurser" Margin="5" TextDecorations="Underline"/>
        <Button x:Name="hanteraResursbokningButton" Content="Hantera Resursbokningar"
                Grid.Column="2" Grid.Row="3" Margin="5" Click="hanteraResursbokningButton_Click"/>
        <Button x:Name="hanteraResurs" Content="Hantera Resurs"
                Grid.Column="2" Grid.Row="4" Margin="5" Click="hanteraResurs_Click"/>

        <TextBlock Grid.Column="3" Grid.Row="2" Text="Övrigt" Margin="5" TextDecorations="Underline"/>
        <Button x:Name="visaStatistikButton" Content="Visa Statistik" 
                Grid.Column="3" Grid.Row="3" Margin="5" Click="visaStatistikButton_Click"/>

    </Grid>
</Window>