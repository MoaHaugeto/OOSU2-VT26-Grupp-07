<Window x:Class="OOSU2_VT26_Grupp_07.Presentationslager_WPF_.VisaMedlemmar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOSU2_VT26_Grupp_07.Presentationslager_WPF_"
        mc:Ignorable="d" FontSize="16" FontFamily="Lucida Bright"
        Title="VisaMedlemmar" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Registrerade Medlemmar" FontSize="28" Margin="0,0,0,20"/>

        <DataGrid x:Name="medlemmarDataGrid" Grid.Row="1" AutoGenerateColumns="False" 
           IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Namn" Binding="{Binding Namn}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Telefon" Binding="{Binding Telefonnummer}" Width="150"/>
                <DataGridTextColumn Header="Nivå" Binding="{Binding MedlemskapsNivå}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Betalstatus}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="tillbakaButton" Content="Tillbaka" Grid.Row="2" 
         Width="150" HorizontalAlignment="Left" Margin="0,20,0,0" Click="tillbakaButton_Click" />
    </Grid>
</Window>
